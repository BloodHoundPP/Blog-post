<%- include('partials/header'); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">

  <div class="form-group">
    <label for="titleId" class="form-label">Title </label>
    <input type="text" name="postTitle" value="" class="form-control" id="titleId">
  </div>

  <div class="form-group">
    <label for="postId" class="form-label">Post</label>
    <textarea name="postContent" rows="8" cols="80" class="form-control" id="postId"></textarea>
  </div>

  <button type="submit" name="button" class="btn btn-primary">Publish</button>

</form>

<%- include('partials/footer'); -%>
